    "@react-oauth/google": "^0.12.2",
    "@sourdough/shared": "*",
    "axios": "^1.9.0",
    "clsx": "^2.1.1",
    "immer": "^10.1.1",
    "ionicons": "^8.0.9",
    "jwt-decode": "^4.0.0",
    "lodash.debounce": "^4.0.8",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook": "^0.0.1",
